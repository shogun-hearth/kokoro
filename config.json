{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "hearth-web": {
      "transformGroup": "js",
      "files": [
        {
          "format": "javascript/es6",
          "destination": "colors.js"
        },
        {
          "format": "typescript/es6-declarations",
          "destination": "colors.d.ts"
        },
        {
          "format": "javascript/es6",
          "destination": "spacing.js"
        },
        {
          "format": "typescript/es6-declarations",
          "destination": "spacing.d.ts"
        }
      ]
    }
  }
}